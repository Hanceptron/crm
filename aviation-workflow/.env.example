# Aviation Workflow System - Environment Configuration Template
# Copy this file to .env and customize for your environment

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Application Environment
APP_NAME="Aviation Workflow System"
APP_ENV="development"  # development/staging/production
DEBUG=true
SECRET_KEY="dev-secret-key-change-in-production"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite (Development)
DATABASE_URL="sqlite:///./workflow.db"

# PostgreSQL (Production)
# DATABASE_URL="postgresql://aviation_user:aviation_password@localhost:5432/aviation_workflow"

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Server Settings
API_HOST="0.0.0.0"
API_PORT=8000
API_PREFIX="/api"

# CORS Settings
CORS_ORIGINS="http://localhost:8501,http://localhost:3000"

# =============================================================================
# MODULE CONFIGURATION
# =============================================================================

# Enabled Modules (comma-separated)
ENABLED_MODULES="departments,templates,comments,approvals"

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Authentication
ENABLE_AUTH=false

# Features
ENABLE_NOTIFICATIONS=false
ENABLE_METRICS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
DEV_RELOAD=true
DEV_SEED_DATA=true